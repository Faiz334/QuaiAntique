{% extends 'base/base.html.twig' %}


{% block body %}
<br>
   <div class="container">
   <div class="text-center mb-5">
        <h1>Carte du restaurant</h1>
        <br>
         <h2>Menus</h2>
         </div>
        <ul>
            {% for menu in menus %}
             <li class= "text-center mb-5">
                    <h3>{{ menu.titre }}</h3>
                    <p>{{ menu.description }}</p>
                    <p>Prix : {{ menu.prix / 100}} €</p>
                </li>
            {% endfor %}
        </ul>
        
        <br>
         <h2 class="text-center mb-5">Plats</h2>
        {% for category in categories %}
            <div class="row">
                <div class="col-md-12 mb-5">
                    <h2>{{ category.nom }}</h2>
                    <ul >
                        {% for dish in category.dishes %}
                            <li>{{ dish.titre }} : {{ dish.prix / 100}} €</li>
                            
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}